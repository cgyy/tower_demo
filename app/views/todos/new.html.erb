<p style="color:red"><%= flash[:alert] %></p>

<%= form_for @todo, url: project_todos_path(@project) do |f| %>
  名称: <%= f.text_field :name %><br />
  指派人: <%= f.select :assignee_id, @project.users.pluck(:name, :id), include_blank: true  %><br />
  截止日期: <%= f.date_field :due_date %><br />
  
  <% if params[:list_id].to_i > 0 %>
    <%= hidden_field_tag("todo[list_id]", params[:list_id].to_i) %>
  <% end %>

  <%= f.submit "创建任务" %>
<% end %>